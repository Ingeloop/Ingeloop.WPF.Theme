    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Ingeloop.WPF.Theme"
    xmlns:design="clr-namespace:Ingeloop.WPF.Design;assembly=Ingeloop.WPF.Design">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Ingeloop.WPF.Icons;component/Resources/Generic.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/Ingeloop.WPF.Core;component/Resources/Converters.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/Ingeloop.WPF.Design;component/Resources/Design.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/Ingeloop.WPF.Theme;component/Colors/Colors.xaml"/>
        <design:AppTheme PrimaryColor="{StaticResource IngeloopMediumBlue}" SecondaryColor="{StaticResource IngeloopDarkBlue}"></design:AppTheme>
    </ResourceDictionary.MergedDictionaries>

</ResourceDictionary>